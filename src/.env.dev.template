# Development Environment Configuration Template
# Copy this file to .env and customize for your service

# ===========================================
# Docker Compose Settings
# ===========================================
COMPOSE_PROJECT_NAME=myservice-dev

# ===========================================
# Service Ports (Use unique ports to avoid conflicts)
# ===========================================
APP_PORT=8080

# Database ports - offset to avoid conflicts with other services
# Auth: 5433/6380, Notifier: 5434/6381
# Adjust these for your service
POSTGRES_PORT=5435
REDIS_PORT=6382

# ===========================================
# Application Settings
# ===========================================
SERVER_PORT=8080
SERVER_MODE=development
SERVER_NAME=my-service
LOG_LEVEL=debug

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_HOST=myservice-postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_dev_password
POSTGRES_DB=myservice_db
POSTGRES_SSLMODE=disable

# ===========================================
# Redis Cache
# ===========================================
REDIS_HOST=myservice-redis
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# External Services
# ===========================================
AUTH_SERVICE_URL=http://localhost:9001
NOTIFIER_SERVICE_URL=http://localhost:9002

# ===========================================
# Observability
# ===========================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=my-service
