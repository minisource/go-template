# Application Environment Configuration
# Copy this file to .env and update values for your environment

# Application
APP_ENV=development
PORT=5005

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=your_database_name
DB_SSL_MODE=disable

# Authentication (Casdoor)
AUTH_ENDPOINT=http://localhost:8000
AUTH_CLIENT_ID=your_client_id
AUTH_CLIENT_SECRET=your_client_secret
AUTH_ORGANIZATION=your_organization
AUTH_APPLICATION=your_application

# Logging
LOG_LEVEL=debug
LOG_ENCODING=json

# CORS
CORS_ALLOW_ORIGINS=*

# Redis (Optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
# REDIS_DB=0

# JWT (Optional - if not using Casdoor)
# JWT_SECRET=your_jwt_secret
# JWT_REFRESH_SECRET=your_refresh_secret
# JWT_ACCESS_EXPIRE_MINUTES=1440
# JWT_REFRESH_EXPIRE_MINUTES=60

# Elasticsearch (Optional)
# ELASTIC_VERSION=8.10.2
# ELASTIC_PASSWORD=changeme
# KIBANA_SYSTEM_PASSWORD=changeme
# FILEBEAT_INTERNAL_PASSWORD=changeme
