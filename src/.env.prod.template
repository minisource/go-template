# Production Environment Configuration Template
# Copy this file to .env and set secure values

# ===========================================
# Docker Compose Settings
# ===========================================
COMPOSE_PROJECT_NAME=myservice-prod

# ===========================================
# Application Settings
# ===========================================
SERVER_PORT=8080
SERVER_MODE=production
SERVER_NAME=my-service
LOG_LEVEL=info

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_HOST=myservice-postgres
POSTGRES_USER=myservice_user
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
POSTGRES_DB=myservice_db
POSTGRES_SSLMODE=require

# ===========================================
# Redis Cache
# ===========================================
REDIS_HOST=myservice-redis
REDIS_PASSWORD=CHANGE_ME_TO_SECURE_REDIS_PASSWORD
REDIS_DB=0

# ===========================================
# External Services
# ===========================================
AUTH_SERVICE_URL=http://auth:9001
NOTIFIER_SERVICE_URL=http://notifier:9002

# ===========================================
# Observability
# ===========================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
OTEL_SERVICE_NAME=my-service
